# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET   	/:page                		controllers.Application.show(page)

GET   	/app/:site                	controllers.Application.app(site)

POST   	/api/weather               	controllers.Api.weather()


POST   	/api/waypoint/create 		controllers.Waypoints.create()
POST   	/api/waypoint/update/:id   	controllers.Waypoints.update(id: Long)
GET   	/api/waypoint/all   		controllers.Waypoints.all()
GET   	/api/waypoint/delete/:id   	controllers.Waypoints.delete(id: Long)
GET   	/api/waypoint/fetch/:id   	controllers.Waypoints.fetchWaypoint(id: Long)